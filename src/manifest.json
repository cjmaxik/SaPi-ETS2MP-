{
	"manifest_version": 2,
	"version": "0.1.8",
	"name": "__MSG_appName__",
	"description": "__MSG_appDesc__",
	"default_locale": "en",
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"icons": {
			"16":  "./img/16x16.png",
			"32":  "./img/32x32.png",
			"48":  "./img/48x48.png",
			"128": "./img/128x128.png"
	},
	"permissions": [
			"tabs",
			"storage",
			"notifications",
			"https://*.steamcommunity.com/*",
			"https://*.truckersmp.com/*",
	],
	"content_scripts": [{
		"matches": [
				"*://steamcommunity.com/profiles/*",
				"*://steamcommunity.com/id/*",
				"*://steamcommunity.com//profiles/*",
				"*://steamcommunity.com//id/*",
				"*://steamcommunity.com//id/*",
				"https://*.truckersmp.com/*",
		],
		"js": [
				"/js/jquery-2.1.3.min.js",
				"/js/script.js"
		],
		"css": ["/css/inject.css"]
		
	}],
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
	"background" : {
			"page": "background.html"
    },
   "web_accessible_resources": ["/js/inject.js"],
   "browser_action": {
			"default_title": "__MSG_appTitlePopup__",
			"default_icon": {
				"19": "./img/19x19.png",
				"38": "./img/38x38.png"
			},
			"default_popup": "popup.html"
    }
}
